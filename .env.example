# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_DEV_COMPANY_ID="optional-dev-company-id"

# Certificates & Encryption
CERT_PASSWORD_ENCRYPTION_KEY="32-char-encryption-key"
NODE_EXTRA_CA_CERTS="path/to/extra/certs.pem"

# NF-e (Fiscal) Settings
NFE_ENVIRONMENT="homologacao" # producao or homologacao
NFE_DEBUG="true"
NFE_WS_DEBUG="true"

# NF-e Testing (Optional)
NFE_TEST_COMPANY_ID="test-company-id"
NFE_TEST_PFX_PATH="path/to/test/cert.pfx"
NFE_TEST_PFX_PASSWORD="test-cert-password"

# SEFAZ (Legacy/Direct)
SEFAZ_DEBUG="true"
SEFAZ_CA_BUNDLE_PATH="path/to/ca-bundle.pem"
SEFAZ_PFX_PATH="path/to/cert.pfx"
SEFAZ_PFX_PASSWORD="cert-password"
SEFAZ_REJECT_UNAUTHORIZED="0" # Set to 0 for self-signed or test certs

# System Debug
CAD_DEBUG="true"
